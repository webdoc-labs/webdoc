{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "require-jsdoc": "off",
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "indent": [
            "error",
            2
        ],
        "spaced-comment": "off"
    },
    "plugins": [
        "eslint-plugin-flow"
    ]
}
